# ============================================
# E-commerce Montería — Frontend Environment
# ============================================
# Copy this file to .env.local and fill in the values

# Strapi API
NEXT_PUBLIC_API_URL=http://localhost:1337
NEXT_PUBLIC_API_TOKEN=your_strapi_api_token

# Wompi (Client-side)
NEXT_PUBLIC_WOMPI_PUBLIC_KEY=your_wompi_public_key

# Site metadata
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=E-commerce Montería
NEXT_PUBLIC_WHATSAPP_NUMBER=+573001234567

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Server-side secrets (not exposed to browser)
STRAPI_API_URL=http://localhost:1337
STRAPI_API_TOKEN=your_strapi_api_token
WOMPI_EVENTS_SECRET=your_wompi_webhook_secret
REVALIDATION_SECRET=your_revalidation_secret
